section.vn-salary-detail-form
	.container
		.main-form
			form
				.list-form-group
					.form-group.form-keyword
						label
							em.material-icons search
						input(type="text" placeholder="Nhập vị trí hoặc chức danh")#searchautocomplate
						.cleartext
							em.mdi.mdi-close-circle
					.form-group.form-select
						label
							em.material-icons place
						select
							option(value="0") Tất cả địa điểm
							option(value="") HCM
					.form-group
						label
							em.material-icons attach_money
						input(type="text" placeholder="Nhập mức lương khảo sát(VND)")
					.form-group.form-submit
						button.btn-gradient tìm hiểu ngay
section.vn-salary-detail.cb-section
	.container
		.box-detail-top
			.cb-name
				h1 Lương Chuyên Viên Thiết Kế tại Hồ Chí Minh
				.noti
					a(href="#")
						em.mdi.mdi-information-outline
						span Phương pháp luận
			.main-salary
				.left-salary
					.salary-default
						p Lương trung bình
							span 12 tr/ tháng
					.list-salary
						- for (i=1; i<6; i++)
							.item
								p.name Lương thấp nhất
								p.salary-number 5 tr
				.right-salary
					.list-salary
						.item
							p.name Vị trí
							p.salary-number Chuyên Viên Thiết Kế
