									h4  Tính nâng cao
								.main-form
									.form-group.form-text
										input(type="text" onkeyup="this.setAttribute('value', this.value);" value="15.000.000" data-type="currency")
										label * Nhập mức lương tổng VNĐ
									.form-group.form-text
										input(type="text" onkeyup="this.setAttribute('value', this.value);" value="" data-type="currency")
