											em.material-icons star
										span 30tr
							li 
								.progress-dot
							li 
								.progress-dot
							li
								.progress-dot
									.value-text-medium
										span 67,500K
										p Cao
		.box-detail-bottom
			.row
				.col-lg-8.col-xl-9-custom
					.banner
						a(href="#")
							img(src="./img/vn-salary/banner3.png", alt="")
					.box-jobs-list
						.title
							h2 Có thể bạn quan tâm
						include ../../jobs-side-list/index6.pug
					.list-banner.row
						.col-md-4
							.banner
								a(href="#")
									img(src="./img/home/4.png", alt="")
						.col-md-4
							.banner
								a(href="#")
									img(src="./img/promo/2.png", alt="")
						.col-md-4
							.banner
								a(href="#")
									img(src="./img/promo/3.png", alt="")
				.col-lg-4.col-xl-3-custom
					.pl-xl-10
						.banner
							a(href="#")
								img(src="./img/vn-salary/banner7.png", alt="")
						.widget.widget-5
							.widget-head
								.cb-title-h3
									h3 thông báo việc làm
							.widget-body
								.cb-sub-title
									p Quickly calculate your Gross/Net income and PIT
								.main-form
									.form-group.form-text
